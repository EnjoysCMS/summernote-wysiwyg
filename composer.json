{
    "name": "enjoyscms/summernote",
    "description": "Wysiwyg Editor Summernote for EnjoysCMS",
    "require": {
        "php": "^8.1",
        "enjoyscms/core": "^6.0@dev"
    },
    "autoload": {
        "psr-4": {
            "EnjoysCMS\\ContentEditor\\Summernote\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\EnjoysCMS\\ContentEditor\\Summernote\\": "tests/"
        }
    },
      "scripts": {
        "post-install-cmd": "EnjoysCMS\\ContentEditor\\Summernote\\Assets::install",
        "post-update-cmd": "EnjoysCMS\\ContentEditor\\Summernote\\Assets::install"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
