{
    "name": "enjoyscms/summernote",
    "description": "Wysiwyg Editor Summernote for EnjoysCMS",
    "require": {
        "php": "^8.1",
        "enjoyscms/core": "^6.0@dev"
    },
    "autoload": {
        "psr-4": {
            "EnjoysCMS\\ContentEditor\\Summernote\\": "src/",
            "EnjoysCMS\\ContentEditor\\Summernote\\Composer\\Scripts\\": "scripts/"

        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\EnjoysCMS\\ContentEditor\\Summernote\\": "tests/"
        }
    },
      "scripts": {
          "summernote-assets-install": "EnjoysCMS\\ContentEditor\\Summernote\\Composer\\Scripts\\AssetsInstallCommand",
          "post-install-cmd": [
              "echo -e \"\\x1b[1mSummernote\\x1b[00m\"",
              "@summernote-assets-install"
          ],
          "post-update-cmd": [
              "echo -e \"\\x1b[1mSummernote\\x1b[00m\"",
              "@summernote-assets-install"
          ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
